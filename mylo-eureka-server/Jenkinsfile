pipeline {
    agent any
    tools {
        maven 'Maven_3.9'
        // dockerTool 'Docker'
    }
    stages {
        stage('Test') {
            steps {
                sh 'mvn -f mylo-eureka-server test'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn -f mylo-eureka-server clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def dockerImage = docker.build('mylo-eureka-server:test', '-f ./mylo-eureka-server/Dockerfile .')
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker Image'
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'DockerhubAccount') {
                        dockerImage.push()
                    }
                }
                echo 'Pushed Docker Image'
            }
        }

        stage('Deploy') {
            steps {
                sshagent(credentials: ['MyloSSHKey']) {
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.219.194.211 "mkdir -p test"'
                }
            }
        }
    }
}