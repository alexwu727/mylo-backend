pipeline {
    agent any
    tools {
        maven 'Maven_3.9'
        // dockerTool 'Docker'
    }
    stages {
        stage('Test') {
            steps {
                sh 'mvn -f mylo-eureka-server test'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn -f mylo-eureka-server clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build('alexwu727/mylo-eureka-server:latest', '-f ./mylo-eureka-server/Dockerfile .')
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker Image'
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'DockerhubAccount') {
                        dockerImage.push()
                    }
                }
                echo 'Pushed Docker Image'
            }
        }

        stage('Deploy') {
            steps {
                sshagent(credentials: ['MyloSSHKey']) {
                    // Pull the Docker image
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.219.194.211 "docker pull alexwu727/mylo-eureka-server:latest"'

                    // Stop the existing container if needed
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.219.194.211 "docker stop mylo-eureka-server || true"'

                    // Remove the existing container if needed
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.219.194.211 "docker rm mylo-eureka-server || true"'

                    // Run the new Docker container
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.219.194.211 "docker run -d --name mylo-eureka-server -p 8761:8761 alexwu727/mylo-eureka-server:latest"'
                }
            }
        }
    }
}