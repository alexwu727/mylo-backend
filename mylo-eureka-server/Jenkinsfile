pipeline {
    agent any
    tools {
        maven 'Maven_3.9'
        // dockerTool 'Docker'
    }
    stages {
        stage('Test') {
            steps {
                sh 'mvn -f mylo-eureka-server test'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn -f mylo-eureka-server clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                // sh 'docker -v'
                // sh 'docker build -t mylo-eureka-server:latest -f ./mylo-eureka-server/Dockerfile .'
                script {
                    // Build Docker image
                    dockerImage = docker.build('mylo-eureka-server:latest', '-f ./mylo-eureka-server/Dockerfile .')
                }
            }
        }
        /*
        stage('Push Docker Image') {
            steps {
                script {
                    // Push Docker image
                    docker.withRegistry('https://registry.hub.docker.com', 'DockerhubAccount') {
                        dockerImage.push()
                    }
                }
            }
        }
        */

        stage('Deploy') {
            steps {
                sshagent(credentials: ['MyloSSHKey']) {
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.219.194.211 "mkdir -p test"'
                }
            }
        }
    }
}